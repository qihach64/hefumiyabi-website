{
  "name": "hefumiyabi-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "scrape": "tsx scripts/scraper.ts",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset && tsx prisma/seed.ts",
    "import:unified-plans": "tsx scripts/import-unified-plans.ts",
    "import:unified-plans:clear": "tsx scripts/import-unified-plans.ts --clear",
    "migrate:campaigns": "tsx scripts/migrate-campaigns-to-plans.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint --fix",
    "lint:unused": "knip",
    "prepare": "husky"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.0",
    "@aws-sdk/client-s3": "^3.958.0",
    "@aws-sdk/s3-request-presigner": "^3.958.0",
    "@google/genai": "^1.27.0",
    "@prisma/client": "^6.17.1",
    "@stripe/stripe-js": "^8.8.0",
    "@supabase/supabase-js": "^2.81.1",
    "@tanstack/react-query": "^5.90.3",
    "@trpc/client": "^11.8.1",
    "@trpc/react-query": "^11.8.1",
    "@trpc/server": "^11.8.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.25",
    "lucide-react": "^0.545.0",
    "next": "15.5.7",
    "next-auth": "5.0.0-beta.29",
    "nodemailer": "^7.0.9",
    "nuqs": "^2.8.6",
    "prisma": "^6.17.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sonner": "^2.0.7",
    "stripe": "^20.3.1",
    "superjson": "^2.2.6",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^16.1.6",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^4.0.18",
    "cheerio": "^1.1.2",
    "eslint": "^9",
    "eslint-config-next": "^15.5.7",
    "happy-dom": "^20.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "knip": "^5.83.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
